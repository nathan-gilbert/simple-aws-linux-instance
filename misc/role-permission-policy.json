{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetBucketLocation", "s3:GetObject"],
      "Resource": "arn:aws:s3:::my-export-bucket/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:ModifySnapshotAttribute",
        "ec2:CopySnapshot",
        "ec2:Describe*",
        "ec2:ExportImage"
      ],
      "Resource": "*"
    }
  ]
}
